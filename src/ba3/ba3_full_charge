#!/bin/bash
# This script is meant to alert when the ba3 is 99% and still charging
# To keep the ba3 life...
#


ba3_level=$(cat /sys/class/power_supply/BAT1/capacity)

ba3_status=$(cat /sys/class/power_supply/BAT1/status)


while [ $ba3_level == 98 ] && [ $ba3_status == "charging" ]; do

	notify-sned "remove charger"
	espeak "remove charger"
done

